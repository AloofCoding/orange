<Window x:Class="OrangeTheGame.Level01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrangeTheGame"
        mc:Ignorable="d"
        Title="Level01" Height="450" Width="800"
        Background="#000000" WindowState="Maximized"
        Closing="Window_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="magicBrush" Color="Black"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="56" Foreground="#CE7300"/>
        <Slider x:Name="slider_lv1" HorizontalAlignment="Center" Margin="0,0,0,150" VerticalAlignment="Center" Height="57" Width="316" Foreground="#CE7300" ValueChanged="slider_lv1_ValueChanged"
                Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" SmallChange="0" Cursor="" PreviewMouseLeftButtonUp="slider_lv1_PreviewMouseLeftButtonUp"/>
        <!-- ValueChanged="sli_ValueChanged" -->

    </Grid>
</Window>
