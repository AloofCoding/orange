<Window x:Class="OrangeTheGame.Configuration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrangeTheGame"
        mc:Ignorable="d"
        Title="Configuration" Height="450" Width="800" Background="#FFFF8F02">
    <Grid>
        <Label x:Name="lbl_pixelsettings" Content="Change window size:" HorizontalAlignment="Center"  Margin="0,0,300,150" VerticalAlignment="Center" Foreground="Black" FontSize="24"/>
        <TextBox x:Name="txt_width" HorizontalAlignment="Center" Height="42" Margin="392,114,327,263" TextWrapping="Wrap" VerticalAlignment="Center" Width="73" PreviewTextInput="TypeNumericValidation" DataObject.Pasting="PasteNumericValidation" FontSize="24" MaxLength="4"/>
        <TextBox x:Name="txt_height" HorizontalAlignment="Center" Height="42" Margin="578,114,140,263" TextWrapping="Wrap" VerticalAlignment="Center" Width="74" PreviewTextInput="TypeNumericValidation" DataObject.Pasting="PasteNumericValidation" FontSize="24" MaxLength="4"/>
        <Label x:Name="lbl_x" Content="X" HorizontalAlignment="Center"  Margin="497,114,240,263" VerticalAlignment="Center" Foreground="Black" FontSize="24" Width="55" RenderTransformOrigin="-0.023,0.35"/>
        <CheckBox x:Name="chk_fullscreen" Content="Fullscreen" HorizontalAlignment="Center" Margin="392,232,275,156" VerticalAlignment="Center" FontSize="24" IsChecked="True" Unchecked="chk_fullscreen_Unchecked" Checked="chk_fullscreen_Checked" RenderTransformOrigin="0.512,0.447"/>
        <Button x:Name="btn_close" Content="Save Close" HorizontalAlignment="Center" Margin="392,317,214,66" VerticalAlignment="Center" Width="186" Click="btn_close_Click" FontSize="24"/>

    </Grid>
</Window>
